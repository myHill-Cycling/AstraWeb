{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipDefaultLibCheck": true,
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@assets/*": ["./assets/*"],
      "@pictures/*": ["./src/components/pictureHelpers/*"],
      "@worker/*": ["./src/worker/*"],
      "@helpers/*":["./src/helpers/*"]
    },
    "noEmit": true,
    "jsx": "preserve",
    "rootDir": "."
  },
  "include": ["./src/*"],
  "exclude": [
    "node_modules/*",
    "dist/*",
    ".cache/*",
    ".yarn/*"
  ],
  "references": [
    {"path": "./cypress"}
  ]
}
