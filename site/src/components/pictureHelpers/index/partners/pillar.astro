---
import srcsetAvif from "@assets/images/index/partners/PillarDarkHalf.webp?w=50;100;118;160&avif&srcset";
import srcsetWebp from "@assets/images/index/partners/PillarDarkHalf.webp?w=50;100;118;160&webp&srcset";
import srcsetPng from "@assets/images/index/partners/PillarDarkHalf.webp?w=50;100;118;160&png&srcset";
import { src as placeholder } from "@assets/images/index/partners/PillarDarkHalf.webp?w=50&metadata";

export interface Props {
    class?: string
}

const props = Astro.props as Props;

---

<picture>
	<source srcset={srcsetAvif} type="image/avif" />
	<source srcset={srcsetWebp} type="image/webp" />
	<source srcset={srcsetPng} type="image/png" />
	<img class={props.class} loading="lazy"
		src={placeholder} width={160} height={63}
		alt="PILLAR" />
</picture>
