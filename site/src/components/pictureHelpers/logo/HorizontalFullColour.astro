---
import srcsetAvif from "@assets/images/logo/myhill-horizontal-logo-full-colour-high-removebg-preview.png?w=100;125;200;360;400;600;900&avif&srcset";
import srcsetWebp from "@assets/images/logo/myhill-horizontal-logo-full-colour-high-removebg-preview.png?w=100;125;200;360;400;600;900&webp&srcset";
import srcsetPng from "@assets/images/logo/myhill-horizontal-logo-full-colour-high-removebg-preview.png?w=100;125;200;360;400;600;900&png&srcset";
import { src as placeholder } from "@assets/images/logo/myhill-horizontal-logo-full-colour-high-removebg-preview.png?w=100&metadata";

export interface Props {
    class?: string,
    width?: number,
    height?: number
}

const props = Astro.props as Props;

---

<picture >
	<source srcset={srcsetAvif} type="image/avif" sizes="8rem" />
	<source srcset={srcsetWebp} type="image/webp" sizes="8rem" />
	<source srcset={srcsetPng} type="image/png" sizes="8rem" />
	<img class={props.class}
		src={placeholder} loading="lazy"
		width={props.width ?? 120}
		height={props.height ?? 36}
		alt="myHill Cycling" />
</picture>