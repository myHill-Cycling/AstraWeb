{
	"root": true,
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"plugins": [],
	"rules": {
		"quotes": ["error", "double"],
		"semi": ["error", "always"],
		"indent": ["error", "tab"],
		"@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
	},
	"parserOptions": {
		"ecmaVersion": 2022
	},
	"env": {
		"browser": true,
		"node": true
	},
	"overrides": [
		{
			"files": ["*.json"],
			"rules": {
				"semi": "off"
			}
		},
		{
			"files": ["*.cjs"],
			"rules": {
				"@typescript-eslint/no-var-requires": "off"
			}
		}
	]
}
