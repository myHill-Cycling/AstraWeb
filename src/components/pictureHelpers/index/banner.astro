---
//@ts-ignore
import srcsetAvif1 from "@assets/images/index/scenic_narrow.png?w=250;480;500&avif&srcset";
// do it a second time, but now as webp since safari can't display avif
//@ts-ignore
import srcsetWebp1 from "@assets/images/index/scenic_narrow.png?w=250;480;500&webp&srcset";
// do it a third time, but now as png as a fallback for all browsers
//@ts-ignore
import srcsetPng1 from "@assets/images/index/scenic_narrow.png?w=250;480;500&png&srcset";
//@ts-ignore
import srcsetAvif2 from "@assets/images/index/scenic.png?w=550;700;1000;1200;1600&avif&srcset";
//@ts-ignore
import srcsetWebp2 from "@assets/images/index/scenic.png?w=550;700;1000;1200;1600&webp&srcset";
//@ts-ignore
import srcsetPng2 from "@assets/images/index/scenic.png?w=550;700;1000;1200;1600&png&srcset";
// create a small placeholder and import its metadata
//@ts-ignore
import { src as placeholder } from "@assets/images/index/scenic.png?w=200&metadata";

export interface Props {
    class?: string
}

const props = Astro.props as Props;

---

<picture>
    <source srcset={srcsetAvif1} media="(orientation: portrait)" type="image/avif" />
    <source srcset={srcsetWebp1} media="(orientation: portrait)" type="image/webp" />
    <source srcset={srcsetPng1} media="(orientation: portrait)" type="image/png" />
    <source srcset={`${srcsetAvif1}, ${srcsetAvif2}`} type="image/avif" />
    <source srcset={`${srcsetWebp1}, ${srcsetWebp2}`} type="image/webp" />
    <source srcset={`${srcsetPng1}, ${srcsetPng2}`} type="image/png" />
    <img class={props.class}
        src={placeholder}
        role="presentation" />
</picture>